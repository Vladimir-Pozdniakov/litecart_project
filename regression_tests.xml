<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Regression tests" verbose="1">
    <test name="regression testing">
        <groups>
            <define name="all">
                <include name="functional"/>
                <include name="regression"/>
            </define>

            <run>
                <include name="regression"/>
            </run>
        </groups>

        <classes>
            <class name="uiTests.SortProductsTest"/>
            <class name="uiTests.ProductsDisplayingTest"/>
            <class name="uiTests.RegionalSettingsTest"/>
        </classes>


    </test> <!-- litecart_autotests -->
</suite> <!-- Default Suite -->
